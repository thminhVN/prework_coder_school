    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', :rows => '15' %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', :class => 'btn btn-success' %>
    <%= 
    if (action_name == 'edit')
      link_to 'Show', @article, :class => 'btn btn-info'
    end;
    %>
    <%= link_to 'Back', articles_path, :class => 'btn btn-primary' %>
  </div>
<% end %>
