<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title"><%= article.title %></h3>
	</div>
	<div class="panel-body"><%= @markdown.render(article.body).html_safe %></div>
	<div class="panel-footer">
	<%= if(action_name == 'show')
			link_to 'Back', articles_path, :class => 'btn btn-info'
		else
			link_to 'Show', article, :class => 'btn btn-info'
		end; 
		%>
		<%= link_to 'Edit', edit_article_path(article), :class => 'btn btn-primary' %>
		<%= link_to 'Destroy', article, method: :delete, :data => { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
	</div>
</div>